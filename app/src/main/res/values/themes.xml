<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShieldPay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dot_selected</item>
        <item name="colorPrimaryVariant">@color/dot_selected</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ShieldPay.Onboarding" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ShieldPay.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dot_selected</item>
        <item name="colorPrimaryVariant">@color/dot_selected</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ShieldPay.Transparent" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dot_selected</item>
        <item name="colorPrimaryVariant">@color/dot_selected</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="headingLabel" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/label_color</item>
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>

    <style name="label" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/label_header_color</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="layout_constraintWidth_percent">0.9</item>
    </style>

    <style name="editTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintWidth_percent">0.9</item>
    </style>

    <style name="editText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxHeight">@dimen/_50sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edittext_selector</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>

    <style name="checkbox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/dot_selected</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/label_color</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintWidth_percent">0.9</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="blueButton" parent="button">
        <item name="android:background">@drawable/btn_next_background</item>
        <item name="android:textColor">@color/dot_deselected</item>
    </style>

    <style name="whiteButton" parent="button">
        <item name="android:background">@drawable/btn_skip_background</item>
        <item name="android:textColor">@color/dot_selected</item>
    </style>

    <style name="passCodeButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@color/label_color</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
    </style>

    <style name="code" parent="Widget.AppCompat.EditText">
        <item name="android:maxLength">1</item>
        <item name="android:layout_width">@dimen/_50sdp</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:textColor">@color/dot_selected</item>
        <item name="android:textSize">@dimen/_30ssp</item>
        <item name="android:backgroundTint">@color/dot_selected</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="subTitle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/forgot_color</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>